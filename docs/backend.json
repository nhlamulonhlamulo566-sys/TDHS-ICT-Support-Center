
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "The role of the user (e.g. Admin, Technician)."
        },
        "availability": {
            "type": "string",
            "description": "The user's availability status (e.g. Available, On Leave)."
        },
        "avatar": {
            "type": "string",
            "description": "The ID of the user's avatar image."
        },
        "persalNumber": {
          "type": "string",
          "description": "The user's personnel number."
        },
        "phoneNumber": {
            "type": "string",
            "description": "The user's contact phone number."
        },
        "lastLoginAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the user's last login."
        }
      },
      "required": [
        "name",
        "email",
        "role",
        "availability",
        "avatar"
      ]
    },
    "Ticket": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Ticket",
      "type": "object",
      "description": "Represents a help desk ticket.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Ticket."
        },
        "assignedToId": {
          "type": "string",
          "description": "Reference to a User (Technician/Supervisor). (Relationship: User 1:N Ticket)."
        },
        "assignedById": {
          "type": "string",
          "description": "The user ID of the person who assigned the ticket."
        },
        "escalatedById": {
          "type": "string",
          "description": "The user ID of the person who escalated the ticket."
        },
        "escalatedToSupervisorId": {
          "type": "string",
          "description": "Reference to Supervisor. (Relationship: Supervisor 1:N Ticket). Nullable if not escalated."
        },
        "title": {
          "type": "string",
          "description": "Title of the ticket."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the issue."
        },
        "status": {
          "type": "string",
          "description": "Current status of the ticket (e.g., Open, In Progress, Resolved, Closed)."
        },
        "severity": {
          "type": "string",
          "description": "The issue severity(e.g., Critical, High, Medium, Low)"
        },
        "dateOpened": {
          "type": "string",
          "description": "Date and time the ticket was opened.",
          "format": "date-time"
        },
        "dateResolved": {
          "type": "string",
          "description": "Date and time the ticket was resolved. Nullable if not resolved.",
          "format": "date-time"
        },
        "submittedBy": {
          "type": "object",
          "description": "Information about the user who submitted the ticket via the public form.",
          "properties": {
            "persalNumber": { "type": "string" },
            "firstName": { "type": "string" },
            "lastName": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "cellphone": { "type": "string" },
            "jobTitle": { "type": "string" },
            "location": { "type": "string" },
            "district": { "type": "string" },
            "facilityName": { "type": "string" }
          },
          "required": ["persalNumber", "firstName", "lastName", "email", "cellphone", "jobTitle", "location", "district", "facilityName"]
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "status",
        "severity",
        "dateOpened"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Collection of all system users, regardless of role."
    },
    "/tickets/{ticketId}": {
      "schema": {
        "$ref": "#/entities/Ticket"
      },
      "description": "Collection of all help desk tickets."
    }
  }
}
